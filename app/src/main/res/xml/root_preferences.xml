<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreference
            android:summary="Turns on/off notifications"
            app:key="notifications"
            app:title="@string/pref_show_notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/help_header">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="feedback"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_send_feedback" />

    </PreferenceCategory>

</PreferenceScreen>
